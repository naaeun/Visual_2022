using System;
class IntegerConstantApp
{
    public static void Main()
    {
        int x = 3, y = 5;
        int a, b;
        ++x; --y;
        Console.WriteLine("x = {0}, y = {1}", x, y);
        a = (++x) + 1;
        Console.WriteLine("x = {0}, a = {1}", x, a);
        b = (y++) + 1;
        Console.WriteLine("y = {0}, b = {1}", y, b);
    }
}
