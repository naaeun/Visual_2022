using System;
class IntegerConstantApp
{
    public static void Main()
    {
        int a, b, c;
        int m;
        Console.WriteLine("Enter Three numbers : ");
        a = Console.Read() - '0';
        b = Console.Read() - '0';
        c = Console.Read() - '0';
        m = (a > b) ? a : b;
        m = (m > c) ? m : c;
        Console.WriteLine("The largest number = " + m);
    }
}
